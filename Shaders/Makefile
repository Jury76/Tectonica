SHADERS= php/EarthVert.php php/FlatEarthVert.php \
         php/EarthFrag.php php/FlatEarthFrag.php

include ../Makefile.inc

all: ${SHADERS}
	@:

upload: all
	@echo "Uploading Shaders"
	@cp php/*.php ${MIRRORPATH}/${PHPPATH}

clean:
	@echo "Cleaning Shader library"
	@rm -f php/*.php

php/%Vert.php: %.glslVert
	@echo "Converting glsl to php: " $<
	@echo "<!-- AUTOGENERATED - DO NOT HAND EDIT! -->" > $@
	@echo "<script id='$<' type='glsl'>" >> $@
	@cat  $< >> $@
	@echo "</script>" >> $@
	@echo " " >> $@

php/%Frag.php: %.glslFrag
	@echo "Converting glsl to php: " $<
	@echo "<!-- AUTOGENERATED - DO NOT HAND EDIT! -->" > $@
	@echo "<script id='$<' type='glsl'>" >> $@
	@cat  $< >> $@
	@echo "</script>" >> $@
	@echo " " >> $@

